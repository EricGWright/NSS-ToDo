<h1>To Do List</h1>
<ul>
  <% @tasks.each do |task| %>
    <li><%= task.title %>: <%= task.description %><input type="checkbox" value="<%= task.description %>"></li>
  <% end %>
</ul>

<p>
<%= form_for @task do |f| %>
  <%= f.label :title %>
  <%= f.text_field :title %>
  <%= f.label :description %>
  <%= f.text_field :description %>
  <%= f.submit "Submit" %>
<% end %>
</p>
